<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/composes" method="post" class="mb-3">
  <div class="form-group">
    <label>Title</label>
    <input
      type="text"
      autocomplete="off"
      name="postTitle"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea
      name="postBody"
      cols="30"
      rows="5"
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") %>
